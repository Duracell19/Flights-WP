<Application
    x:Class="Flights.WP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Flights.WP">

    <Application.Resources>
        <Style TargetType="Button" x:Key="Button">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="#FF5B2D3C"/>
            <Setter Property="BorderBrush" Value="#FF360638"/>
            <Setter Property="Foreground" Value="#FF959595"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Width" Value="370"/>
            <Setter Property="Height" Value="66"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="TextBlockEntry">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#FF0E59DE"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="25"/>
        </Style>

        <Style TargetType="AutoSuggestBox" x:Key="AutoSuggestBox">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#FF0E59DE"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="Width" Value="271"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="TextBlockFlightsInfo">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Foreground" Value="#FF959595"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <Style TargetType="Image" x:Key="ImageFlightsInfo">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Source" Value="ms-appx:///Assets/direction.png"/>
        </Style>
        
    </Application.Resources>
    
</Application>

