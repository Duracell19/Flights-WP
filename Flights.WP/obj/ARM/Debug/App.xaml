<Application
    x:Class="Flights.WP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Flights.WP.Converters">

    <Application.Resources>

        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="#FF5B2D3C"/>
            <Setter Property="BorderBrush" Value="#FF360638"/>
            <Setter Property="Foreground" Value="#FF959595"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="66"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="TextBlockHelpFlyStyle">
            <Setter Property="Foreground" Value="#FF926DB8"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="TextBlockEntryStyle">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#FF0E59DE"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Width" Value="80" />
        </Style>

        <Style TargetType="TextBlock" x:Key="TextBlockAboutStyle">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FF0E59DE"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="25"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="TextBlockInfoFlyStyle">
            <Setter Property="Foreground" Value="#FF959595"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="22"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="TextBlockWaitFlyStyle">
            <Setter Property="Foreground" Value="#FF959595"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Width" Value="370"/>
        </Style>

        <Style TargetType="ComboBox" x:Key="ComboBoxStyle">
            <Setter Property="Width" Value="271"/>
        </Style>

        <Style TargetType="ProgressRing" x:Key="ProgressRingStyle">
            <Setter Property="BorderBrush" Value="#FF5B2D3C"/>
            <Setter Property="Width" Value="153"/>
            <Setter Property="Height" Value="141"/>
        </Style>

        <Style TargetType="RadioButton" x:Key="RadioButtonStyle">
            <Setter Property="BorderBrush" Value="#FF8D9797"/>
            <Setter Property="Foreground" Value="#FF0E59DE"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="25"/>
        </Style>

        <Style TargetType="DatePicker" x:Key="DatePickerStyle">
            <Setter Property="Background" Value="#FF2F393A"/>
            <Setter Property="Width" Value="185"/>
            <Setter Property="Foreground" Value="#FF8D9797"/>
        </Style>

        <local:InvertBoolenConverter x:Key="Inversion"/>
        <local:PictureConverter x:Key="ChangePicture"/>

    </Application.Resources>
</Application>

